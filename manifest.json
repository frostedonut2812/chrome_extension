{
  "manifest_version": 3,
  "name": "YouTube Bookmarker",
  "version": "1.0",
  "description": "Bookmark YouTube videos and add notes to them",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
} 